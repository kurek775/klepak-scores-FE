{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/i18n/**",
          "/*.png",
          "/*.svg",
          "/*.jpg",
          "/*.ico"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "api-events",
      "urls": ["/api/events/**"],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 100,
        "maxAge": "10m",
        "timeout": "5s"
      }
    }
  ]
}
